<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped table-hover table-responsive table-bordered table-inverse" >
                <tr>
                     <th>Nombre</th>
                     <th>Dirección</th>
                     <th>Ciudad</th>
                     <th>País</th>
                     <th>Detalle</th>
                </tr>
                <% @enterprise.each do |e| %>
                      <tr>
                          <th scope="row"><%= e.name %></th>
                            <td><%= e.address %></td>
                            <td><%= e.city %></td>
                            <td><%= e.country %></td>
                            <td><%= link_to "Ver", detail_path(e) %></td>
                      </tr> 
                <% end %>  
            </table>

        </div>
        <div class="col-md-4"></div>
    </div>
</div>


 
